public class TestJDBC {
	UserDAO dao = null;
	User user = null;
	
	@Test
	public void save() {
		dao = new UserDAO();
		user = new User();
		
		user.setName("CauÃª");
		user.setEmail("santos@santos");
		dao.save(user);
	}
	
	@Test
	public void findAll() {
		dao = new UserDAO();
		System.out.println(dao.findAll());
	}
	
	@Test
	public void findById() {
		dao = new UserDAO();
		user = dao.findById(11L);
		System.out.println(user);
	}
	
	@Test
	public void update() {
		dao = new UserDAO();
		user = dao.findById(11L);
		user.setName("Mudei o nome!!!");
		dao.update(user);
	}
